<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mistyRose"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/solnborder"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttons_layout"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_margin="16dp"
            android:paddingTop="32dp"
            android:fillViewport="true">

            <TextView
                android:id="@+id/solution_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="textEnd"
                android:gravity="center_vertical|end"
                android:textColor="@color/translucentBlack"
                android:textSize="24sp"
                android:scrollbars="vertical"
                tools:ignore="HardcodedText" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_margin="16dp"
            android:fillViewport="true">

            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="textEnd"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:scrollbars="vertical" />
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_c"
                android:tag="C"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_clear" />

            <ImageButton
                android:id="@+id/btn_del"
                android:tag="⌫"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/btn_percent"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_percent"
                android:tag="%" />

            <ImageButton
                android:id="@+id/btn_divide"
                android:tag="÷"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_divide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_7"
                android:tag="7"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_7" />

            <ImageButton
                android:id="@+id/btn_8"
                android:tag="8"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_8" />

            <ImageButton
                android:id="@+id/btn_9"
                android:tag="9"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_9" />

            <ImageButton
                android:id="@+id/btn_multiply"
                android:tag="×"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_multiply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_4"
                android:tag="4"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_4" />

            <ImageButton
                android:id="@+id/btn_5"
                android:tag="5"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_5" />

            <ImageButton
                android:id="@+id/btn_6"
                android:tag="6"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_6" />

            <ImageButton
                android:id="@+id/btn_add"
                android:tag="+"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_1"
                android:tag="1"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_1" />

            <ImageButton
                android:id="@+id/btn_2"
                android:tag="2"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_2" />

            <ImageButton
                android:id="@+id/btn_3"
                android:tag="3"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_3" />

            <ImageButton
                android:id="@+id/btn_subtract"
                android:tag="-"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_subtract" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_point"
                android:tag="."
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_point" />

            <ImageButton
                android:id="@+id/btn_0"
                android:tag="0"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_0" />

            <ImageButton
                android:id="@+id/btn_equal"
                android:tag="="
                android:layout_width="150dp"
                android:layout_height="76dp"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_equal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>